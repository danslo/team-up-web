.page-header
	h2.nullable(ng-hide='app.domainPermission.clients'){{ ui.teamup.manage }}
	h2.nullable(ng-show='app.domainPermission.clients'){{ ui.teamup.teams_Cap }} - {{ ui.teamup.clientGroups }}


.tabbable.tabs-left

	ul.nav.nav-tabs.nav-tabs-app(style='margin-right: 0;')

		li(class="{{(views.teamClients==true) && 'active'}}",
			ng-show='app.domainPermission.clients')
			a(ng-click='setViewTo("teamClients")')
				span.icomoon(data-icon='',
				aria-hidden='true')
				| {{ ui.teamup.teams_Cap }}
				br
				| & 
				br
				| {{ ui.teamup.clientGroups }}

		li(class="{{(views.teams==true) && 'active'}}")
			a(ng-click='setViewTo("teams")')
				span.icomoon(data-icon='',
				aria-hidden='true')
				| {{ ui.teamup.teams_Cap }}

		li(class="{{(views.clients==true) && 'active'}}",
			ng-show='app.domainPermission.clients')
			a(ng-click='setViewTo("clients")')
				span.icomoon(data-icon='',
				aria-hidden='true')
				| {{ ui.teamup.clients }}



	.tab-content.treegrid-container(ng-controller='treegrid')


		#viewTeamClientTab.tab-pane(class="{{(views.teamClients==true) && 'active'}}")
			.row-fluid
				.span6
					h3
						span.titleIcon.icon-heart7
						| {{ui.teamup.clientGroups}}
					hr
					#teamClients_left
				.span6
					h3
						span.titleIcon.icon-users
						| {{ui.teamup.teams_Cap}}
					hr
					#teamClients_right
			hr
			button.btn.btn-success(ng-click='save.teamClients()') {{ ui.teamup.save }}


		#viewTeamsTab.tab-pane(class="{{(views.teams==true) && 'active'}}")
			.row-fluid
				.span6
					h3
						span.titleIcon.icon-user0
						| {{ ui.agenda.members }}
					hr
					#teams_left
				.span6
					h3
						span.titleIcon.icon-users
						| {{ ui.teamup.teams_Cap }}
					hr
					#teams_right
			hr
			button.btn.btn-success(ng-click='save.teams()') {{ ui.teamup.save }}


		#viewClientsTab.tab-pane(class="{{(views.clients==true) && 'active'}}")
			.row-fluid
				.span6
					h3
						span.titleIcon.icon-heart7
						| {{ ui.teamup.clients }}
					hr
					#clients_left
				.span6
					h3
						span.titleIcon.icon-users
						| {{ ui.teamup.clientGroups }}
					hr
					#clients_right
			hr
			button.btn.btn-success(ng-click='save.clients()') {{ ui.teamup.save }}